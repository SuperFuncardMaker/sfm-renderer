{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "module": "esnext",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "build",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}